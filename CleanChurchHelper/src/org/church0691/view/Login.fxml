<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="550.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.church0691.controller.LoginController">
	<left>
      <VBox alignment="CENTER_LEFT" prefHeight="550.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-border-style: solid; -fx-border-radius: 10px; -fx-border-color: #A5CC82; -fx-border-width: 5px;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="35.0" />
               </padding>
               <children>
                  <Label text="Welcome to access ! " textFill="#00467f">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="txtLoginId" alignment="CENTER" prefHeight="30.0" promptText="ID">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="txtLoginPwd" alignment="CENTER" promptText="PASSWORD">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </PasswordField>
                  <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="0.0">
                     <children>
                        <Button fx:id="btnLogin" minHeight="35.0" mnemonicParsing="false" onAction="#ActLogin" prefWidth="100.0" style="-fx-background-color: #A5CC82; -fx-background-radius: 10px;" text="Login" textFill="#00467f">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <Label fx:id="btnJoin" onMouseClicked="#ActFormPrint" style="-fx-background-color: #f1f1f1;" text="가입하기 Click !" textFill="#00467f">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="100.0" left="40.0" right="40.0" top="100.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <VBox fx:id="vboxMain" alignment="CENTER" prefHeight="530.0" prefWidth="343.0" style="-fx-background-color: #A5CC82;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <TextArea fx:id="testT" prefHeight="200.0" prefWidth="200.0" text="이 프로그램은 블라브라브라 이렇게 &#10;저렇게 요롷게 사용하는 겁니다." />
         </children></VBox>
   </center>
</BorderPane>
